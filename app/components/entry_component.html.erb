<article class="entry">
  <%= content_tag :h2, title, class: 'entry__title' %>
  <%= content_tag :span, author, class: 'entry__author' %>
  <%- if published_at.present? %>
    <%= content_tag :span, helpers.l(published_at), class: 'entry__published-at' %>
  <% end %>
  <% if content? %>
    <%= content_tag :iframe, '', sandbox: 'allow-same-origin allow-top-navigation allow-top-navigation-by-user-activation', srcdoc: transformed_content, class: 'entry__content', height: '500px', data: { sprinkles_component: 'resize-iframe' } %>
  <% end %>
  <%- if url.present? %>
    <%= link_to t('.go_to_original'), url, class: 'entry__link', target: '_blank', rel: 'noopener noreferrer' %>
  <% end %>
</article>
