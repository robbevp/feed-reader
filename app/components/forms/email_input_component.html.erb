<%= content_tag :div, class: ['input', 'input--email', { 'input--valid': valid? }, { 'input--invalid': invalid? }, @class] do %>
  <%= form.label name, class: 'input__label' %>
  <%= form.email_field name, class: 'input__field' %>
  <%- if hint.present? %>
    <%= content_tag :span, error, class: 'input__hint' %>
  <%- end %>
  <%- if invalid? %>
    <%= content_tag :span, error, class: 'input__error' %>
  <%- end %>
<% end %>
