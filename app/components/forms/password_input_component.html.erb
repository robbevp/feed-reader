<%= content_tag :div, class: ['input', 'input--password', { 'input--valid': valid? }, { 'input--invalid': invalid? }, @class], **@html_attrs do %>
  <%= form.label name, class: 'input__label' %>
  <%= form.password_field name, class: 'input__field', disabled: %>
  <%- if hint.present? %>
    <%= content_tag :span, hint, class: 'input__hint' %>
  <%- end %>
  <%- if invalid? %>
    <%= content_tag :span, error, class: 'input__error' %>
  <%- end %>
<% end %>
