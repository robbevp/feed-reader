<%= content_for :page_title, t('.page_title') %>

<%= link_to t('.add_new'), new_feed_path %>

<table class="table">
  <thead class="table__head">
    <tr class="table__row table__row--head">
      <%= content_tag :td, Feed.human_attribute_name(:name), class: 'table__cell' %>
      <%= content_tag :td, Feed.human_attribute_name(:entries), class: 'table__cell' %>
      <%= content_tag :td, Feed.human_attribute_name(:last_fetched_at), class: 'table__cell' %>
      <%= content_tag :td, t('.actions'), class: 'table__cell' %>
    </tr>
  </thead>
  <tbody class="table__body">
    <%- @feeds.each do |feed| %>
      <tr class="table__row">
        <%= content_tag :td, feed.name, class: 'table__cell' %>
        <%= content_tag :td, feed.entries_count, class: 'table__cell' %>
        <%= content_tag :td, feed.last_fetched_at.present? ? l(feed.last_fetched_at) : t('.not_yet_fetched'), class: 'table__cell' %>
        <%= content_tag :td, class: 'table__cell' do %>
          <%= link_to t('.show'), feed, class: 'table__link' %>
          <%= link_to t('.edit'), [:edit, feed], class: 'table__link' %>
        <% end %>
      </tr>
    <%- end %>
  </tbody>
</table>
