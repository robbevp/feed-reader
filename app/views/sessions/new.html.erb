<%= content_for :page_title, t('.page_title') %>
<%= form_with scope: :session, class: 'form' do |form| %>
  <%= form.input :email %>
  <%= form.input :password %>
  <%= form.input :remember_me, as: :boolean %>

  <%= form.submit %>
<% end %>

<%= link_to t('.forgot_password'), new_password_path %>
